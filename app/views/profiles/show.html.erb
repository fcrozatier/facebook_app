  
<div class="float-left p-6">
  <h2 class="text-xl mb-2">Your profile info:</h2>
  <p class="mb-4">
    Name: <%= current_user.name %><br>
    Email: <%= current_user.email %><br>
    Age: <%= pluralize(current_user.age, "year") %> old<br>
  </p>
  <h2 class="text-xl mb-2">Your activity:</h2>
  <p>
    <%= pluralize(current_user.posts.count, "Post") %><br>
    <%= pluralize(current_user.likes.count, "Like") %><br>
    <%= pluralize(current_user.comments.count, "Comment") %>
  </p>
</div>

<div class="central_panel">
  <h2 class="text-xl mb-2">Your posts:</h2>
  <% @posts.each do |p| %>
    <div class="p-4">
      <%= render '/posts/post', p: p %>
      <%= render 'comments/list_comments', comments: p.comments  %>
    </div>
  <% end %>
</div>
