<div class="central_panel w-4/5 sm:w-3/5 md:w-1/2 lg:w-2/5">
  <h2 class="text-lg pb-2">
    <%= pluralize(@new_notifications_count, "new notification") %> found:
  </h2>
  <% @notifications.each do |n| %>
  <% if User.exists?(n.who) %>
    <div class="w-full p-4 my-1 inline-block <%= 'border border-black' if n.created_at >= @cutoff_date %>">
      <p>
        <%= link_to n.who_full_name, user_profile_path(n.who) %> <%= n.display_msg %><br/>
        <small><%= time_ago_in_words(n.created_at) + " ago." %></small> 
      </p>
    </div>
  <% end %>
  <% end %>
</div>


