<div class="container">
<div class="bg-blue-100 w-2/5 mx-auto p-6">
  <h2 class="text-lg pb-2">
    <%= "#{@users.count} person".pluralize(@users.count) %> found:
  </h2>
  <% @users.each do |user| %>
    <div>
    <p class="py-4 inline-block">
      <%= user.name %>
    </p>
    <% if @sent_requests_users_id.include?(user.id) %>
      <p class="inline-block float-right mt-2"> Request sent!</p>
    <% else %>
      <%= link_to 'Send Friend request', request_path(receiver_id: user.id), class:"btn-small inline-block float-right mt-2" %>
    <% end %>
    </div>
  <% end %>
</div>
</div>
