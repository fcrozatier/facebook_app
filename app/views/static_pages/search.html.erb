<div class="central_panel w-4/5 sm:w-3/5 md:w-1/2 lg:w-2/5">
  <h2 class="text-lg pb-2">
    <%= pluralize(@users.count, "person") %> found:
  </h2>
  <% @users.each do |user| %>
    <div>
    <p class="py-4 inline-block">
      <%= user.name %>
    </p>
    <% if @friends_ids.include?(user.id) %>  
      <%= link_to 'View profile', user_profile_path(user.id), class:"btn-small inline-block float-right mt-2" %>
    <% else %>
      <% if @sent_requests_users_id.include?(user.id) %>
        <p class="inline-block float-right mt-2"> Request sent!</p>
      <% else %>
        <%= link_to 'Send Friend request', friendships_path(receiver_id: user.id), method: :post, class:"btn-small inline-block float-right mt-2" %>
      <% end %>
    <% end %>
    </div>
  <% end %>
</div>