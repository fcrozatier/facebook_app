<div>
  <% if comments.any? %>
    <small><%= pluralize(comments.count, "comment") %>:</small>
    <% comments.each do |comment| %>
      <p class="ml-6 text-sm">
        <strong><%= link_to comment.user.name, user_profile_path(comment.user.id) %>:</strong> <%= comment.body %>
      </p>
    <% end %>
  <% end %>
</div>
