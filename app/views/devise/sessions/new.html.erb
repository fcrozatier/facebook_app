<div class="container card">
<h2 class="title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.label :email, class: "label block" %>
    <%= f.text_field :email, autofocus: true, input_html: { autocomplete: "email" }, class: "input" %>

    <%= f.label :password, class: "label block" %>
    <%= f.password_field :password, input_html: { autocomplete: "current-password" }, class: "input" %>
    <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %> Remember Me
  </div>

  <div class="my-3">
    <%= f.submit "Log in", class: "btn-main" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>