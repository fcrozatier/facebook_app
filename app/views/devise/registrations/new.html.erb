<div class="container mx-auto max-w-sm my-20 p-10 bg-blue-100">

  <h2 class="text-2xl font-bold mb-4">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, required: true, autofocus: true, class: "input border" %>

      <%= f.label :email, class: "label" %>
      <%= f.text_field :email, required: true, class: "input" %>
      
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, required: true, class: "input" %>

      <%= f.label :password_confirmation, class: "label" %>
      <%= f.password_field :password_confirmation, required: true, class: "input" %>

      <%= f.label :birthdate, class: "label" %>
      <%= f.date_field :birthdate, class: "input" %>

      <div class="mb-2">
        <%= f.label :gender_male, "Male", class: "text-lg" %>
        <%= f.radio_button :gender, "Male", class: "mr-2" %>
        <%= f.label :gender_female, "Female", class: "text-lg" %>
        <%= f.radio_button :gender, "Female" %>
      </div>

    </div>

    <div class="my-3">
      <%= f.submit "Sign up", class: "btn-main" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>