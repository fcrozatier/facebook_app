<div class="container">
<div class="card">
<h2 class="title">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="form-inputs">
    <%= f.label :email, class: "label block"%>
    <%= f.text_field :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, class: "input" %>
  </div>

  <div class="my-3">
    <%= f.submit "Send reset password instructions", class: "btn-main" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>